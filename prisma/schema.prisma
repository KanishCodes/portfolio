// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// This defines the structure for each project in your portfolio
model Project {
  id          String   @id @default(cuid())
  order       Int      @default(0)
  title       String
  description String   @db.Text
  tags        String[]
  imageUrl    String
  liveUrl     String?
  githubUrl   String?
  createdAt   DateTime @default(now())
}